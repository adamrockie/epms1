{% extends "frontend/patials/master.html" %}

{% block title %} Reset Password {% endblock %}

{% block head %}  {% endblock %}

{% block content %}

<div class="account-content">    
        <!-- Account Logo -->
        <div class="account-logo">
            <a href="home"><img src="assets/img/logo2.png" alt="OAuGF Logo" width="150px" height="auto"></a>
        </div>
        <!-- /Account Logo -->
        
        <div class="account-box">
            <div class="account-wrapper">
                <h3 class="account-title">Forgot Password?</h3>
                <p class="account-subtitle">Enter your email to get a password reset link</p>
                
                <!-- Account Form -->
                <form method="post" action="post_reset">
                    <div class="form-group">
                        <label>Official Email Address</label>
                        <input name="email" id="email" class="form-control" type="text" required>
                    </div>
                    <div class="form-group text-center">
                        <button class="btn btn-primary account-btn" type="submit">Reset Password</button>
                    </div>
                    <div class="account-footer">
                        <p>Remember your password? <a href="home">Login</a></p>
                    </div>
                </form>
                <!-- /Account Form -->
                
            </div>
        </div>
    </div>
</div>

{% endblock %}
