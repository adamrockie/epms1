<div class="pro-overview tab-pane fade show active" id="emp_projects" >
    <div class="row">

         <!-- Docs Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    {% if role == "Superuser" %}
                    <div class="col-auto float-left">
                        <!--div class="view-icons"-->
                        <button type="button" class="btn btn-primary" id="toggle" >Grid View  <i class="fa fa-th"></i></button>

                        <a href="downloadall/{{sid}}" target="_blank" class="grid-view btn btn-link">
                            <button type="button" class="btn btn-primary">Download All Documents  <i class="fa fa-download"></i></button>
                        </a>

                    </div>

                    <div class="col-auto float-end ms-auto">
                        <a href="#" class="btn add-btn" data-bs-toggle="modal" data-bs-target="#upload_doc"><i class="fa fa-plus"></i>Upload a New Document</a>                        
                    </div>
                    {% endif %}
                </div>
            </div>
        <!-- /Docs Header -->

        <!--Docs List-->

        <div class="row" id="uploadlistzz">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable" id="doc_table">
                        <thead>
                            <tr>
                                <th>Document Type</th>
                                <th>Title</th>
                                <th>Description</th>
                                <th>View</th>
                                <th>Download</th>
                                <th class="text-end no-sort">Action</th>
                            </tr>
                        </thead>
                        <tbody>
    
                            {% for doc in documents %}

                            <tr>
                                <td>{{doc.type.name|capitalize}}</td>
                                <td>{{doc.title|upper}}</td>
                                <td>{{doc.description|upper}}</td>
                                <td>                                   
                                    <a href="#" data-bs-toggle="modal" data-bs-target="#imagedisplay" onclick="image_display('{{doc.title|title}}','{{doc.doc}}');"><i class="fa fa-eye"></i></a>
                                </td>
                                <td>
                                    <a href="uploads/documents/{{doc.doc}}" target="_blank"><i class="fa fa-download m-r-5"></i></a>
                                </td>
                                <td class="text-end">
                                {% if role == "Superuser" %}
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#edit_doc" onclick="edit_upload('{{doc.id}}')"><i class="fa fa-pencil m-r-5"></i> Edit</a>
                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#delete_upload" onclick="delete_warning('{{doc.id}}');"><i class="fa fa-trash-o m-r-5"></i> Delete</a>
                                        </div>
                                    </div>
                                {% endif %}
                                </td>
                            </tr>
    
                            {% endfor %}
    
                        </tbody>
                    </table>                               
                </div>
            </div>
        </div>

