    {% endblock %}

{% block content %}

				<!-- Page Content -->
                <div class="content container-fluid" id="userslist">
				
					<!-- Page Header -->
					<div class="page-header">
						<div class="row align-items-center">
							<div class="col">
								<h3 class="page-title">Password Management</h3>
								<ul class="breadcrumb">
									<li class="breadcrumb-item"><a href="dashboard">Dashboard</a></li>
									<li class="breadcrumb-item active">Change Password</li>
								</ul>
							</div>
							<!--div class="col-auto float-end ms-auto">
								<a href="#" class="btn add-btn" data-bs-toggle="modal" data-bs-target="#add_user"><i class="fa fa-plus"></i> Add User</a>
							</div-->
						</div>
					</div>
					<!-- /Page Header -->
					
					<div class="col-xl-6 d-flex">
						<div class="card flex-fill">
							<div class="card-header">
								<h4 class="card-title mb-0">Change your account password</h4>
							</div>
							<div class="card-body">
								<form action="#" id="change_password">

									<div class="form-group row">
										<label class="col-lg-3 col-form-label">Current Password</label>
										<div class="col-lg-9">
											<span id="cmessage"></span>
											<input type="password" class="form-control" name="current_password" id="current_password" required>
										</div>
									</div>
									<div class="form-group row">
										<label class="col-lg-3 col-form-label">New Password</label>
										<div class="col-lg-9">
											<input type="password" class="form-control" name="epassword" id="epassword" required>
										</div>
									</div>
									<div class="form-group row">
										<label class="col-lg-3 col-form-label">Repeat New Password</label>
										<div class="col-lg-9">
										<span id="emessage"></span>
											<input type="password" class="form-control" name="econfirm_password" id="econfirm_password" required>
										</div>
									</div>
									<input class="form-control" type="hidden" value="{{token}}" name="token" id="token">
									<input class="form-control" type="hidden" value="{{userc.ippis}}" name="ippis" id="ippis">
									<div class="text-end">
										<button type="submit" class="btn btn-primary">Submit</button>
									</div>

								</form>
							</div>
						</div>
					</div>


{% endblock %}

