        <div class="row" id="grids">
          <div class="col-md-12">

            <div class="row">
             <div class="col-md-4">
                <form class="file-search">
                    <div class="input-group">
                        <div class="input-group-prepend">
                        </div>
                        <input type="text" class="form-control rounded-pill" placeholder="Search" id="gridsearch">
                    </div>
                </form>
              </div>
            </div>
            <hr>

                <div class="file-body">
                    <div class="file-scroll">
                        <div class="file-content-inner">

                            <div class="row row-sm">
                                {% for doc in documents %}
                                <div class="col-6 col-sm-4 col-md-3 col-lg-4 col-xl-3 g-body">
                                    <div class="card card-file">
                                        <div class="dropdown-file">
                                            <a href="" class="dropdown-link" data-bs-toggle="dropdown"><i class="fa fa-ellipsis-v"></i></a>
                                            <div class="dropdown-menu dropdown-menu-right">
                                                <a href="#" data-bs-toggle="modal" data-bs-target="#imagedisplay" onclick="image_display('{{doc.title|title}}','{{doc.doc}}');" class="dropdown-item">View</a>
                                                <a href="uploads/documents/{{doc.doc}}" target="_blank" class="dropdown-item">Download</a>
                                                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#edit_doc" onclick="edit_upload('{{doc.id}}')">Edit</a>
                                                <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#delete_upload" onclick="delete_warning('{{doc.id}}');">Delete</a>
                                            </div>
                                        </div>
                                            <a href="#" data-bs-toggle="modal" data-bs-target="#imagedisplay" onclick="image_display('{{doc.title|title}}','{{doc.doc}}');">
                                                <div class="card-file-thumb">
                                                        <img src="uploads/documents/{{doc.doc}}" alt=""  height="100px"> 
                                                </div>
                                            </a>
                                        <div class="card-body">
                                            <h6><a href="">{{doc.title|title}}</a></h6>
                                            <span>{{doc.description|title}}</span>
                                        </div>
                                        <div class="card-footer">{{doc.type.name|capitalize}}</div>
                                    </div>
                                </div>
                                {% endfor %}

                            </div>

                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!--Docs List-->
    </div>
</div>