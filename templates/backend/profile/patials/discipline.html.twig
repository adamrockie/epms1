<div class="tab-pane fade" id="emp_discipline">
    <div class="row">

         <!-- Docs Header -->
            <div class="page-header">
                <div class="row align-items-center">
                    {% if role == "Superuser" %}
                    <div class="col-auto float-end ms-auto">
                        <a href="#" class="btn add-btn" data-bs-toggle="modal" data-bs-target="#add_query"><i class="fa fa-plus"></i>Add New Query</a>
                        <div class="view-icons">
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        <!-- /Docs Header -->

        <!--Docs List-->

        <div class="row" id="uploadlist">
            <div class="col-md-12">
                <div class="table-responsive">
                    <table class="table table-striped custom-table datatable" id="staff_table">
                        <thead>
                            <tr>
                                <th>Title</th>
                                <th>Description</th>
                                <th>Status</th>
                                <th>Date</th>
                                <th class="text-end no-sort">Action</th>
                            </tr>
                        </thead>
                        <tbody>
    
                            {% for discipline in disciplines %}

                            <tr>
                                <td>{{discipline.title|title}}</td>
                                <td>{{ discipline.content|length > 70 ? discipline.content|slice(0, 70) ~ '...' : discipline.content  }}</td>
                                <td>{{discipline.status}}</td>
                                <td>{{discipline.created_at|date("d/m/Y")}}</td>
                                <td class="text-end">
                                    <div class="dropdown dropdown-action">
                                        <a href="#" class="action-icon dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false"><i class="material-icons">more_vert</i></a>
                                        <div class="dropdown-menu dropdown-menu-right">
                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#view_discipline" onclick="get_discipline('{{discipline.uniqid}}')"><i class="fa fa-eye m-r-5"></i>View Details</a>
                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#edit_discipline" onclick="edit_discipline('{{discipline.uniqid}}')"><i class="fa fa-pencil m-r-5"></i>Edit</a>
                                            <a class="dropdown-item" href="#" data-bs-toggle="modal" data-bs-target="#delete_discipline1" onclick="delete_des_warning('{{discipline.uniqid}}');"><i class="fa fa-trash-o m-r-5"></i>Delete</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
    
                            {% endfor %}
    
                        </tbody>
                    </table>                               
                </div>
            </div>
        </div>

        <!--Docs List-->
        
    </div>
</div>